        <activity
            android:name=".PropertiesActivity"
            android:label="@string/title_activity_properties" >
        </activity>
        <activity
            android:name=".ComingsoonActivity"
            android:label="@string/title_activity_comingsoon" >
        </activity>
        <activity
            android:name=".TripActivity"
            android:label="@string/title_activity_trip" >
        </activity>
        <activity
            android:name=".AddBudgetActivity"
            android:label="@string/title_activity_add_budget" >
        </activity>
        <activity
            android:name=".EditExpensesActivity"
            android:label="@string/title_activity_edit_expenses" >
        </activity>
        <activity
