        <activity
            android:name=".DVWVolumeFragment"
            android:label="@string/title_activity_dvwvolume" >
        </activity>
        <activity
            android:name=".DVWWeightFragment"
            android:label="@string/title_activity_dvwweight" >
        </activity>
        <activity
            android:name=".ManageTripActivity"
            android:label="@string/title_activity_manage_trip"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ZZH.travelplanner.MainActivity" />
        </activity>
        <activity
            android:name=".CurrencyConversionActivity"
            android:label="@string/title_activity_currency_conversion"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ZZH.travelplanner.MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TodayActivity"
            android:label="@string/title_activity_today" >
        </activity>
        <activity
            android:name=".StartActivity"
            android:label="@string/title_activity_start" >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about" >
