<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ZZH.travelplanner.ItineraryActivity" >

    <TextView
        android:id="@+id/selectedBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/noBudget" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.ZZH.travelplanner.ItineraryListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />
    
    <fragment
        android:id="@+id/fragment1"
        android:name="com.ZZH.travelplanner.ItineraryDetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" />
    
</LinearLayout>
