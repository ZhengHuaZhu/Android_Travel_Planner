<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ZZH.travelplanner.MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:background="#222222" >
    	
	    <TextView
	        android:id="@+id/teamlogo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"        
	        android:drawableLeft="@drawable/teamlogo"
	        android:onClick="openAboutActivity"
	        android:drawablePadding="10dp"
	        android:singleLine="true"
	        android:text="@string/teamname"
	        android:textSize="25sp"
	        android:textStyle="bold"
	        android:textColor="#FFFFFF"
	        android:gravity="center_vertical" />
    </LinearLayout>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
	    android:background="#D3D3D3"
	    android:paddingTop="30dp"
        android:paddingBottom="30dp" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:paddingTop="10dp"
        	android:paddingBottom="10dp" >

            <ImageButton
                android:id="@+id/ib1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
           		android:background="#D3D3D3"
                android:src="@drawable/itineraryicon" 
                android:paddingTop="5dp"
       			android:paddingBottom="5dp"
       			android:onClick="currentItinerary" />

            <ImageButton
                android:id="@+id/ib2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
          		android:background="#D3D3D3"
                android:src="@drawable/todayicon"
                android:onClick="launchToday"
                android:paddingTop="5dp"
        		android:paddingBottom="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
        	android:paddingBottom="10dp" >

            <ImageButton
                android:id="@+id/ib3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
         		android:background="#D3D3D3"
                android:src="@drawable/tipicon" 
                android:paddingTop="5dp"
        		android:paddingBottom="5dp"
        		android:onClick="calTip" />

            <ImageButton
                android:id="@+id/ib4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"  
           		android:background="#D3D3D3"
                android:src="@drawable/conversion" 
                android:onClick="callDVWConversion"
                android:paddingTop="5dp"
        		android:paddingBottom="5dp" />     
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:paddingTop="10dp"
        	android:paddingBottom="10dp">

            <ImageButton
                android:id="@+id/ib5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
             	android:background="#D3D3D3"
           		android:src="@drawable/nearmeicon"
           		android:onClick="comingSoon"
                android:paddingTop="5dp"
        		android:paddingBottom="5dp" />

            <ImageButton
                android:id="@+id/ib6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
               	android:background="#D3D3D3"  
              	android:src="@drawable/weathericon" 
              	android:onClick="launchWeatherActivity"
                android:paddingTop="5dp"
        		android:paddingBottom="5dp" />

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:paddingTop="10dp"
        	android:paddingBottom="10dp">

            <ImageButton
                android:id="@+id/ib7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="callCurrencyActivity"
           		android:src="@drawable/currencyconversionicon"
                android:paddingTop="5dp"
        		android:paddingBottom="5dp" />

            <ImageButton
                android:id="@+id/ib8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
             	android:background="#D3D3D3"   
              	android:src="@drawable/budgeticon" 
              	android:onClick="comingSoon"
                android:paddingTop="5dp"
        		android:paddingBottom="5dp" />

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:paddingTop="10dp"
        	android:paddingBottom="10dp">

            <ImageButton
                android:id="@+id/ib9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D3D3D3"
           		android:src="@drawable/localcustomsicon"
           		android:onClick="comingSoon"
           		android:paddingTop="5dp"
        		android:paddingBottom="5dp" />

            <ImageButton
                android:id="@+id/ib10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
             	android:background="#D3D3D3"
              	android:src="@drawable/poiicon"
              	android:onClick="comingSoon" 
            	android:paddingTop="5dp"
        		android:paddingBottom="5dp" />

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:paddingTop="10dp"
        	android:paddingBottom="10dp">

            <ImageButton
                android:id="@+id/ib11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D3D3D3"
                android:onClick="callManageTripActivity"
           		android:src="@drawable/managetripsicon"
             	android:paddingTop="5dp"
        		android:paddingBottom="5dp" />

            <ImageButton
                android:id="@+id/ib12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D3D3D3" 
              	android:src="@drawable/comingsoon" 
              	android:onClick="comingSoon"
             	android:paddingTop="5dp"
        		android:paddingBottom="5dp" />

        </TableRow>
    </TableLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:gravity="center"
    	android:background="#222222" 
    	android:orientation="horizontal" >
    	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"        
	        android:text="@string/hello"
	        android:textSize="25sp"
	        android:textStyle="bold"
	        android:textColor="#FFFFFF"
	        android:gravity="center_vertical" />
	    
	    <TextView
	        android:id="@+id/username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/temp"        
	        android:textSize="25sp"
	        android:textStyle="bold"
	        android:textColor="#FFFFFF"
	        android:gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>
</ScrollView>
